

<template name="msgItem" >
<view class="post-container">
  <view class="post-author-date">
      <image src="{{item.avatar}}" class="post-author"></image>
      <text class="post-date">{{item.date}}</text>
  </view>  
      <image src="{{ item.headImgSrc}}" class="post-image" ></image>
      <text class="post-content">{{item.content}}</text>

  <view class="post-like">
      <image src="/images/icon/star.png" class="post-like-image"></image>
      <text class="post-like-font">{{item.collection}}</text>
      <image src="/images/icon/view.png" class="post-like-image"></image>
      <text class="post-like-font">{{item.reading}}</text>
  </view>
  </view>
</template>
